{
	"extends": "./paths.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"typeRoots": ["@types"],
		"declaration": true
	},
	"include": [
		"./src/index.d.ts",
		"@types/global/types.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
